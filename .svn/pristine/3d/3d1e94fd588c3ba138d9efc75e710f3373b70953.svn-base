datasource:
  type: com.alibaba.druid.pool.DruidDataSource
  master:
    url: jdbc:mysql://172.17.0.93:3306/enrol?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull
    username: root
    password: 123456
    driver-class-name: com.mysql.jdbc.Driver
    filters: stat
    maxActive: 100
    initialSize: 20
    maxWait: 60000
    minIdle: 1
    timeBetweenEvictionRunsMillis: 60000
    minEvictableIdleTimeMillis: 300000
    validationQueryTimeout: 900000
    validationQuery: SELECT SYSDATE() from dual
    testWhileIdle: true
    testOnBorrow: false
    testOnReturn: false
    poolPreparedStatements: true
    maxOpenPreparedStatements: 20

#mybatis 配置
mybatis:
  type-aliases-package: com.cz.enrol.entity
  mapper:
    locations: classpath:com/cz/enrol/dao/**/**Mapper.xml
    basePackage: com.cz.enrol.dao
    mappers: com.cz.enrol.common.BaseDao


#mybatis 分页插件配置
pagehelp:
  #4.0.0以后版本可以不设置该参数
  dialect: mysql
  # 该参数默认为false
  #设置为true时，会将RowBounds第一个参数offset当成pageNum页码使用
  offsetAsPageNum: true
  #该参数默认为false
  #设置为true时，使用RowBounds分页会进行count查询
  rowBoundsWithCount: true
  #设置为true时，如果pageSize=0或者RowBounds.limit = 0就会查询出全部的结果
  #（相当于没有执行分页查询，但是返回结果仍然是Page类型）
  pageSizeZero: true
  #支持通过Mapper接口参数来传递分页参数
  supportMethodsArguments: true

#应用配置
server:
  port: 8088
  context-path: /enrol
  token-key: enrol-token

#logback 日志输出设置
spring:
  profiles:
    active: dev
  redis:
      database: 0
      host: 127.0.0.1
      port: 6379
      timeout: 2000
      password:
      pool:
        maxActive: 100
        maxWait: 10000
        maxIdle: 8
        minIdle: 0
  session:
    store-type: none