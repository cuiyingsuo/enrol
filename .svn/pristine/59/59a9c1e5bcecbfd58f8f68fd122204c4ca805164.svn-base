    public Byte getIsFull() {
        return isFull;
    }

    public void setIsFull(Byte isFull) {
        this.isFull = isFull;
    }

    public Byte getIsBatch() {
        return isBatch;
    }

    public void setIsBatch(Byte isBatch) {
        this.isBatch = isBatch;
    }

    public Byte getIsLoan() {
        return isLoan;
    }

    public void setIsLoan(Byte isLoan) {
        this.isLoan = isLoan;
    }

