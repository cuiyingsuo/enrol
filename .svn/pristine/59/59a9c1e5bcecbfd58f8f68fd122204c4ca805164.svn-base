        return creator;
    }

    public void setCreator(String creator) {
        this.creator = creator;
    }

    private String creator;


    public String getCoverImgTmp() {
        return coverImgTmp;
    }

    public void setCoverImgTmp(String coverImgTmp) {
        this.coverImgTmp = coverImgTmp;
    }

    public String getDetailImgTmp() {
        return detailImgTmp;
    }

    public void setDetailImgTmp(String detailImgTmp) {
        this.detailImgTmp = detailImgTmp;
    }

    private String coverImgTmp;


    private String detailImgTmp;

