<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.enrol.dao.permission.RolePermissionMapper">

    <!--实体映射 -->
    <resultMap id="EnrolRolePermissionResultMapResultMap"
               type="com.cz.enrol.entity.RolePermission">
        <!---->
        <id property="id" column=""/>
        <!--角色Id -->
        <result property="roleId" column="role_id"/>
        <!--资源Id -->
        <result property="permissionId" column="permission_id"/>
        <!--创建者 -->
        <result property="creator" column="creator"/>
        <!--创建时间 -->
        <result property="createTime" column="create_time"/>
        <!--角色编码-->
        <result property="roleCode" column="role_code"/>
        <!--权限编码-->
        <result property="permissionCode" column="permission_code"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
		id, role_id, permission_id, creator, create_time, code, role_code, permission_code
	</sql>
	
    <!--角色查询权限-->
    <select id="queryPermissionByRole" parameterType="java.lang.String" resultType="java.util.LinkedHashMap">
	SELECT
		ep.`code` ,
		ep.`name` ,
		ep.parent_code as parentCode,
		ep.type,
		ep.url,
		ep.`order`
	FROM
		enrol_role_permission erp,
		enrol_permission ep
	WHERE
		erp.permission_id = ep.id
		AND erp.role_id in (${roleIds})
		order by ep.`order` asc
	</select>

</mapper>