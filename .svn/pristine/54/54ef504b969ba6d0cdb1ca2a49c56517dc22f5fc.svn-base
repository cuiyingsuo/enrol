#应用配置
server:
  context-path: /enrol
  token-key: enrol-token #前台登录token key
  tomcat:
    uri-encoding: UTF-8

#后台用户登录/注册Aes秘钥
enrol:
  user:
    defaut-password: 123456 #后台添加用户默认密码
    login:
      key: chuanzhienrol123456@.com


#应用环境配置
spring:
  profiles:
    active: local
  session:
      store-type: none
  http:
    multipart:
      max-file-size: 5MB
    encoding:
      force: true
      charset: UTF-8
      enabled: true
  jackson:
    time-zone: GMT+8
    date-format: yyyy-MM-dd HH:mm:ss
    joda-date-time-format: yyyy-MM-dd HH:mm:ss

#mybatis 配置
mybatis:
  type-aliases-package: com.cz.enrol.entity
  mapper:
    locations: classpath:com/cz/enrol/dao/*/mapper/**Mapper.xml
    basePackage: com.cz.enrol.dao
    mappers: com.cz.enrol.common.BaseDao

#mybatis 分页插件配置
pagehelp:
  #4.0.0以后版本可以不设置该参数
  dialect: mysql
  # 该参数默认为false
  #设置为true时，会将RowBounds第一个参数offset当成pageNum页码使用
  offsetAsPageNum: true
  #该参数默认为false
  #设置为true时，使用RowBounds分页会进行count查询
  rowBoundsWithCount: true
  #设置为true时，如果pageSize=0或者RowBounds.limit = 0就会查询出全部的结果
  #（相当于没有执行分页查询，但是返回结果仍然是Page类型）
  pageSizeZero: true
  #支持通过Mapper接口参数来传递分页参数
  supportMethodsArguments: true

