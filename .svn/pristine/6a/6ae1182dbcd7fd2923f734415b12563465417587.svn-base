package com.cz.enrol.controller;

import com.cz.enrol.entity.EnrolOrderSub;
import com.cz.enrol.service.EnrolOrderSubService;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * 订单信息表（子表）； 访问控制器类
 **/
@Controller
@RequestMapping("/enrolOrderSubController")
public class EnrolOrderSubController {

    // 统一记录日志类
    private Logger Log = LoggerFactory.getLogger("enrol");
    @Autowired
    // 当前业务操作接口bo
    private EnrolOrderSubService service;

    /**
     * 查询分订单信息
     *
     * @param request
     * @param response
     * @param modelMap
     * @return
     */
    @RequestMapping(value = "/queryOrderSubInfo", method = RequestMethod.POST)
    public String queryOrderSubInfo(@RequestBody Long id,
                                    HttpServletRequest request, HttpServletResponse response,
                                    ModelMap modelMap) {
        EnrolOrderSub orderSubInfo = service.selectByPrimaryKey(id);
        if (null != orderSubInfo) {
            modelMap.addAttribute("success", "true");
            modelMap.addAttribute("code", 200);
            modelMap.addAttribute("message", "成功");
            modelMap.addAttribute("orderSubInfo", orderSubInfo);
        }
        return "enrol/order/orderSubInfo";
    }

    /**
     * 查询分订单信息
     *
     * @param modelMap
     * @return
     */
    @RequestMapping(value = "/addOrderSub", method = RequestMethod.POST)
    public String addOrderSub( ModelMap modelMap) {
        EnrolOrderSub orderSub = new EnrolOrderSub();

        int rel = service.insertSelective(orderSub);
        if (rel != 0) {
            modelMap.addAttribute("success", "true");
            modelMap.addAttribute("code", 200);
            modelMap.addAttribute("message", "成功");
        }
        return "result";
    }
}
