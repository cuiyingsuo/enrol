package com.cz.enrol.controller;

import com.cz.enrol.entity.EnrolGoodsClass;
import com.cz.enrol.service.EnrolGoodsClassService;
import com.cz.enrol.service.EnrolOrderMainService;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.util.List;
import java.util.Map;

/**
 * 
 * 订单信息表（主表）； 访问控制器类
 * 
 **/
@Controller
@RequestMapping("/enrolOrderController")
public class EnrolOrderMainController {

	// 统一记录日志类
	private Logger Log = LoggerFactory.getLogger("enrol");
	@Autowired
	private EnrolOrderMainService orderMainService;
	@Autowired
	private EnrolGoodsClassService gcService;

	/**
	 * 查询主订单信息
	 * 
	 * @param request
	 * @param response
	 * @param modelMap
	 * @return
	 */
	@RequestMapping(value = "/queryOrderSubList", method = RequestMethod.POST)
	public String queryOrderSubList(@RequestParam Long orderNo,
                                    HttpServletRequest request, HttpServletResponse response,
                                    ModelMap modelMap) {
		List<Map<String,Object>> orderSubList = orderMainService.querySubOrderByMergeOrderNo(orderNo);
		if (null != orderSubList) {
			modelMap.addAttribute("success", "true");
			modelMap.addAttribute("code", 200);
			modelMap.addAttribute("message", "成功");
			modelMap.addAttribute("orderSubList", orderSubList);
		}
		return "enrol/order/orderSubList";
	}

	/**
	 * 查询主订单列表
	 * 
	 * @param request
	 * @param response
	 * @param modelMap
	 * @return
	 */
	@RequestMapping(value = "/queryOrderList", method = RequestMethod.POST)
	public String queryOrderList(@RequestParam Long studentId,
                                 HttpServletRequest request, HttpServletResponse response,
                                 ModelMap modelMap) {
		List<Map<String,Object>> orderMainList = orderMainService
				.queryOrderByStudentId(studentId);
		if (null != orderMainList) {
			modelMap.addAttribute("success", "true");
			modelMap.addAttribute("code", 200);
			modelMap.addAttribute("message", "成功");
			modelMap.addAttribute("orderMainList", orderMainList);
		}
		return "enrol/order/orderList";
	}

	/**
	 * 
	 * 订单确认页
	 */
	@RequestMapping(value = "/confirmOrder", method = RequestMethod.POST)
	public String confirmOrder(
            @RequestParam Long classId,
            @RequestParam Long goodsId,
            HttpServletRequest request, HttpServletResponse response,
            ModelMap modelMap){
		List<EnrolGoodsClass> gcList = gcService.queryByGoodsId(goodsId);
		// 判断所传参数商品id和班级id是否匹配
		boolean isRightClass = false;
		for (EnrolGoodsClass gc : gcList) {
			if (gc.getClassId() == classId) {
				isRightClass = true;
			}
		}
		if(!isRightClass){
			modelMap.addAttribute("success", "flase");
			modelMap.addAttribute("code", 202);
			modelMap.addAttribute("message", "商品信息与班级不匹配!");
			return "result";
		}
		if(isRightClass){
			Map<String,Object> confirmOrderMap = orderMainService.confirmMainOrder(classId,goodsId);
			if (null != confirmOrderMap) {
				modelMap.addAttribute("success", "true");
				modelMap.addAttribute("code", 200);
				modelMap.addAttribute("message", "成功");
				modelMap.addAttribute("confirmOrderMap", confirmOrderMap);
			}
		}
		return "enrol/order/confirmOrder";
	}
	/**
	 * 
	 * 提交主订单
	 */
	@RequestMapping(value = "/submitOrder", method = RequestMethod.POST)
	public String submitMainOrder(
            @RequestParam Long classId,
            @RequestParam Long goodsId,
            @RequestParam int payType,
            @RequestParam int isReceipt,
            HttpServletRequest request, HttpServletResponse response,
            ModelMap modelMap){
		List<EnrolGoodsClass> gcList = gcService.queryByGoodsId(goodsId);
		//判断所传参数商品id和班级id是否匹配
		boolean isRightClass = false;
		for(EnrolGoodsClass gc:gcList){
			if(gc.getClassId()==classId){
				isRightClass=true;
			}
		}
		if(!isRightClass){
			modelMap.addAttribute("success", "flase");
			modelMap.addAttribute("code", 202);
			modelMap.addAttribute("message", "商品信息与班级不匹配!");
			return "result";
		}
		boolean isSuccess = orderMainService.submitMainOrder(goodsId,classId,payType,isReceipt);
		if(isSuccess){
			modelMap.addAttribute("success", "true");
			modelMap.addAttribute("code", 200);
			modelMap.addAttribute("message", "订单提交成功");
		}
		return "enrol/result";
	}
}
